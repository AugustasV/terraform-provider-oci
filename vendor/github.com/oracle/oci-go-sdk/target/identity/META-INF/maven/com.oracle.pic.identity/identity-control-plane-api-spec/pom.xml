<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">

    <modelVersion>4.0.0</modelVersion>

    <parent>
        <groupId>com.oracle.pic.identity</groupId>
        <artifactId>identity-api-spec-parent</artifactId>
        <version>0.2.88</version>
    </parent>

    <groupId>com.oracle.pic.identity</groupId>
    <artifactId>identity-control-plane-api-spec</artifactId>
    <packaging>jar</packaging>

    <name>identity-control-plane-api-spec</name>
    <build>
        <resources>
            <resource>
                <directory>${project.basedir}/src/main/resources</directory>
            </resource>
        </resources>
        <plugins>
            <!-- Begin Swagger spec validation -->
            <plugin>
                <groupId>com.oracle.bmc.sdk</groupId>
                <artifactId>bmc-sdk-swagger-validator</artifactId>
                <version>1.4.0</version>
                <executions>
                    <execution>
                        <id>public-api-validation</id>
                        <phase>generate-resources</phase>
                        <goals>
                            <goal>validate</goal>
                        </goals>
                        <configuration>
                            <!-- This is the Swagger spec file that you are running through the code generator. -->
                            <specPath>${project.basedir}/src/main/resources/identity-control-plane-api-spec-20160918.yaml</specPath>

                            <!-- This file lets you ignore errors and warnings. The file should be checked into the
                                 source repository, and it should be included in every code review. -->
                            <configPath>${project.basedir}/spec-validation-config.yaml</configPath>

                            <!-- This file will be generated by the tool, and should be checked into the source repository.
                                 It should be included in every code review. -->
                            <outputPath>${project.basedir}/spec-validation-output.txt</outputPath>

                            <!-- Once a team has reduced the number of errors to zero, this should be set to true. -->
                            <failBuildOnError>false</failBuildOnError>
                        </configuration>
                    </execution>
                </executions>
            </plugin>
            <!-- End Swagger spec validation -->
        </plugins>
    </build>

</project>
