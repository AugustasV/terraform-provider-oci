<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
  <modelVersion>4.0.0</modelVersion>

  <groupId>com.oracle.pic.casper</groupId>
  <artifactId>casper-api-spec</artifactId>
  <version>1.1.10</version>
  <packaging>jar</packaging>

  <parent>
    <groupId>com.oracle.pic.commons</groupId>
    <artifactId>pic-pom</artifactId>
    <version>0.5.1</version>
  </parent>

  <name>Casper API Specification</name>

  <build>
    <plugins>
      <plugin>
          <groupId>io.swagger</groupId>
          <artifactId>swagger-codegen-maven-plugin</artifactId>
          <version>2.2.0</version>
          <executions>
              <execution>
                  <id>casper-client-doc</id>
                  <goals>
                      <goal>generate</goal>
                  </goals>
                  <configuration>
                      <inputSpec>${project.basedir}/src/main/resources/casper-api.yaml</inputSpec>
                      <language>html</language>
                      <output>${project.basedir}/target/generated-sources/casper</output>
                  </configuration>
              </execution>
              <execution>
                  <id>swift-client-doc</id>
                  <goals>
                      <goal>generate</goal>
                  </goals>
                  <configuration>
                      <inputSpec>${project.basedir}/src/main/resources/swift-api.yaml</inputSpec>
                      <language>html</language>
                      <output>${project.basedir}/target/generated-sources/swift</output>
                  </configuration>
              </execution>
              <execution>
                  <id>s3-client-doc</id>
                  <goals>
                      <goal>generate</goal>
                  </goals>
                  <configuration>
                      <inputSpec>${project.basedir}/src/main/resources/s3-api.yaml</inputSpec>
                      <language>html</language>
                      <output>${project.basedir}/target/generated-sources/s3</output>
                  </configuration>
              </execution>
          </executions>
      </plugin>
      <plugin>
        <groupId>org.apache.maven.plugins</groupId>
        <artifactId>maven-release-plugin</artifactId>
        <dependencies>
          <dependency>
            <groupId>org.sonatype.plexus</groupId>
            <artifactId>plexus-cipher</artifactId>
            <version>1.4</version>
          </dependency>
        </dependencies>
      </plugin>
      <plugin>
        <groupId>com.oracle.pic.commons.maven</groupId>
        <artifactId>oracle-swagger-maven-plugin</artifactId>
        <version>0.2.4</version>
        <executions>
          <execution>
            <id>casper-public-api-validation</id>
            <goals>
              <goal>validate</goal>
            </goals>
            <configuration>
              <basePackage>com.oracle.pic.commons</basePackage>
              <specPath>src/main/resources/casper-api.yaml</specPath>
              <failBuildOnError>false</failBuildOnError>
            </configuration>
          </execution>
          <execution>
            <id>swift-public-api-validation</id>
            <goals>
              <goal>validate</goal>
            </goals>
            <configuration>
              <basePackage>com.oracle.pic.commons</basePackage>
              <specPath>src/main/resources/swift-api.yaml</specPath>
              <failBuildOnError>false</failBuildOnError>
            </configuration>
          </execution>
          <execution>
            <id>s3-public-api-validation</id>
            <goals>
              <goal>validate</goal>
            </goals>
            <configuration>
              <basePackage>com.oracle.pic.commons</basePackage>
              <specPath>src/main/resources/s3-api.yaml</specPath>
              <failBuildOnError>false</failBuildOnError>
            </configuration>
          </execution>
        </executions>
      </plugin>
    </plugins>
  </build>
</project>
